# Adaptive Queen Intelligence AI Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# GPU Configuration (optional)
GPU_MEMORY_LIMIT=2048  # Memory limit in MB
CUDA_VISIBLE_DEVICES=0  # GPU device ID (if multiple GPUs)

# Neural Network Configuration
NEURAL_NETWORK_BATCH_SIZE=32
NEURAL_NETWORK_EPOCHS=10
NEURAL_NETWORK_LEARNING_RATE=0.001

# Memory Management
MAX_GENERATIONS=10  # Rolling window size
MEMORY_CLEANUP_INTERVAL=300  # Seconds

# WebSocket Configuration
WEBSOCKET_TIMEOUT=300  # Connection timeout in seconds
MAX_CONNECTIONS=100  # Maximum concurrent connections

# Development Settings
DEBUG=false
RELOAD=true  # Auto-reload on code changes